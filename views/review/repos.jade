extends ../layout

block content
  h2
    i.fa.fa-github
    | Repos

  br
  .panel.panel-primary
    .panel-heading
      h3.panel-title Repository Information
    .panel-body
      .row
        each repo in repos
          .col-xs-4
            h4
              a(href='#{repo.html_url}') #{repo.name}
            ul.list-inline
              li
                i.fa.fa-eye-slash
                | Subscribers: #{repo.subscribers_count}
              li
                i.fa.fa-star
                | Starred: #{repo.stargazers_count}
              li
                i.fa.fa-code-fork
                | Forks: #{repo.forks_count}
              li
                i.fa.fa-code
                | #{repo.language}
            strong DESCRIPTION
            p= repo.description
